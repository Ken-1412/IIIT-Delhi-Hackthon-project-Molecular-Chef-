// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  email        String     @unique
  passwordHash String
  name         String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  
  recipes      Recipe[]
  favorites    Favorite[]
}

model Recipe {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name          String
  ingredients   String   // JSON string array
  flavorScore   Float?
  nutritionData String?  // JSON string
  graphData     String?  // JSON string - cached flavor graph
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Favorite {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type      String   // 'recipe', 'ingredient', 'pairing'
  entityId  String
  metadata  String?  // JSON string
  
  createdAt DateTime @default(now())
  
  @@unique([userId, type, entityId])
}

// Cache tables for Foodoscope API responses
model FlavorCache {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  ingredientName String   @unique
  compounds      String   // JSON string
  category       String?
  
  lastFetched    DateTime @default(now())
  expiresAt      DateTime
}

model PairingCache {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  ingredient1 String
  ingredient2 String
  pairingData String   // JSON string
  
  lastFetched DateTime @default(now())
  expiresAt   DateTime
  
  @@unique([ingredient1, ingredient2])
}
